<p id="notice"><%= notice %></p>

<h1>Posts|<%= link_to "New Category", new_category_path %></h1>

<hr>
<br>
<h3>All categories:</h3>
<% Category.all.each do |cat| %>
  <!-- <%= link_to cat.name, posts_path(category: cat.name) %> -->
  <%= link_to cat.name, posts_path(category: cat.name) %><br>
<% end %>
<br>
<hr>
<h3>Categories to display in navbar: </h3>
<% Category.where(display_in_navbar: true).each do |cat| %>
  <%= link_to cat.name, category_path(cat.id) %><br>
<% end %>
<br>
<hr>
<br>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.category.name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
