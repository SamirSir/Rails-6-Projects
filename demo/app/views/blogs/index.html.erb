<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cover Picture</th>
      <th>User</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
          <td><%= blog.title %></td>
          <td><%= image_tag(blog.image, style:'height:100px;') %></td>
          <td>
              <% activeuser = User.find(params[:id]=blog.user_id) %>
              <%= activeuser.username %>
          </td>
          <td><%= link_to  blog.note.filename  %></td>
          <td><%= link_to 'Show', blog %></td>

          <% if blog.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Post', new_blog_path %>
